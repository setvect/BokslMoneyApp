{
  "name": "bokslmoneyapp",
  "version": "1.0.0",
  "description": "복슬머니",
  "main": "main.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/setvect/BokslMoneyApp.git"
  },
  "keywords": [
    "복슬이"
  ],
  "author": "setvect",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/setvect/BokslMoneyApp/issues"
  },
  "homepage": "https://github.com/setvect/BokslMoneyApp#readme",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1"
  },
  "build": {
    "appId": "com.myappid",
    "directories": {
      "output": "dist"
    },
    "files": [
      "나의소중한파일들의경로"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "language": 1042,
      "include": "build/installer.nsh"
    }
  }
}
