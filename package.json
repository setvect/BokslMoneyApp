{
  "name": "bokslmoneyapp",
  "version": "1.0.0",
  "description": "복슬머니",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.vue src",
    "start": "electron-webpack dev",
    "build": "electron-webpack && electron-builder -c.mac.identity=null",
    "postinstall": "electron-builder install-app-deps"
  },
  "electronWebpack": {
    "whiteListedModules": [
      "vue",
      "bootstrap-vue"
    ],
    "renderer": {
      "webpackConfig": "webpack.config"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/setvect/BokslMoneyApp.git"
  },
  "keywords": [
    "복슬이"
  ],
  "author": "setvect",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/setvect/BokslMoneyApp/issues"
  },
  "homepage": "https://github.com/setvect/BokslMoneyApp#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.4.1",
    "bootstrap-vue": "^2.10.1",
    "chart.js": "^2.9.3",
    "datatables": "^1.10.18",
    "datatables.net-buttons": "^1.6.1",
    "daterangepicker": "^3.0.5",
    "electron-find": "^1.0.6",
    "font-awesome": "^4.7.0",
    "fullcalendar": "^3.10.1",
    "icheck": "^1.0.2",
    "jquery": "^3.4.1",
    "jquery-contextmenu": "^2.9.0",
    "jquery-ui": "^1.12.1",
    "jszip": "^3.3.0",
    "lodash": "^4.17.15",
    "log4js": "^6.3.0",
    "moment": "^2.24.0",
    "moment-lunar": "0.0.4",
    "sequelize": "^5.21.7",
    "source-map-support": "^0.5.16",
    "sqlite3": "^4.1.1",
    "sweetalert2": "^9.10.10",
    "vee-validate": "^2.2.15",
    "vue": "^2.6.11",
    "vue-axios": "^2.1.5",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.1.6",
    "vuex": "^3.1.3",
    "vuex-electron": "^1.0.3",
    "xlsx": "^0.15.6"
  },
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^22.4.1",
    "electron-webpack": "^2.7.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^4.0.4",
    "prettier": "^2.0.4",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.9.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.42.1"
  },
  "build": {
    "appId": "boksl",
    "productName": "BokslMoney",
    "directories": {
      "output": "dist",
      "buildResources": "src/main/assets"
    },
    "mac": {
      "icon": "./src/main/assets/icons/boksl-256.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./src/main/assets/icons/boksl-256.png"
    },
    "files": [
      "./src/main/assets/**/*"
    ],
    "target": "NSIS",
    "nsis": {
      "installerIcon": "./src/main/assets/icons/boksl-256.ico",
      "installerHeaderIcon": "./src/main/assets/icons/boksl-256.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
